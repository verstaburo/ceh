extends ../../layouts/default
include ../../blocks/image-bg/image-bg
include ../../blocks/title/title
include ../../blocks/grid/grid

block head
  - var pageTitle = 'Контакты'

block content
  +b.contact
    +title('Контакты')
    +grid()
      +e('div').box
        +col(7)
          +e.img
            +image-bg()(src="assets/images/contact/photo.jpg" alt='')
        +col(5)
          +e.title
            +e('ul').list
              +e('li').item <span> #[+icon('address').__address] </span> Бережковская набережная 20, стр 13
              +e('li').item <span> #[+icon('telefon1').__telefon1] </span> 8 495 229-28-80
                <br/>   8 916 702-53-53
              +e('li').item <span> #[+icon('letter').__letter] </span> info@tsehstudio.ru

      +e('div').box._transport
        +col(6)
          +e('div').box-left
            +e('h3') На автомобиле <span> #[+icon('auto').__auto] </span>
            +e('p') По навигатору проехать по адресу - Бережковская набережная 20В, далее через проходную на территорию бизнес-парка «Лираль». Кодовое слово для прохода на территорию: «Фотостудия Цех».
        +col(6)
          +e('div').box-right
            +e('h3') На общественном транспорте <span> #[+icon('transport').__transport] </span>
            +e('p') Метро Киевская, любым маршрутным транспортом до остановки ТЭЦ 12, далее через проходную на территорию бизнес-парка «Лираль». Кодовое слово для прохода на территорию: «Фотостудия Цех».

      +e('div').box.__map
        +col(12)
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3177.0491242976686!2d37.54824715869078!3d55.732215470606164!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46b54b93865a2305%3A0x511ee91d49beaee9!2z0JHQtdGA0LXQttC60L7QstGB0LrQsNGPINC90LDQsS4sIDIwLCDQnNC-0YHQutCy0LAsINCg0L7RgdGB0LjRjywgMTIxMDU5!5e0!3m2!1sru!2sua!4v1496264382809" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
