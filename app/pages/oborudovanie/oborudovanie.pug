        +col(5)
          +e.img
            +image-bg()(src="assets/images/oborudovanie/photo4.jpg" alt='')

      +e('div').box
        +col(5)
          +e.img
            +image-bg()(src="assets/images/oborudovanie/photo5.jpg" alt='')
        +col(7)
          +e.title
            +square('КОМПЛЕКТЫ ПОСТОЯННОГО СВЕТА')
            +e('ul').list
