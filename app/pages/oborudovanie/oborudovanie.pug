extends ../../layouts/default
include ../../blocks/image-bg/image-bg
include ../../blocks/title/title
include ../../blocks/grid/grid
include ../../blocks/square/square

block head
  - var pageTitle = 'Оборудование'

block content
  +b.oborudovanie
    +title('Оборудование')
    +grid()
      +e('div').box
        +col(7)
          +e.img
            +image-bg()(src="assets/images/oborudovanie/photo1.jpg" alt='')
        +col(5)
          +e.title
            +square('FALCON EYES')
            +e('ul').list
              +e('li').item Вспышка студийная Falcon Eyes Sprinter 200 BW
              +e('li').item Комплект Falcon Eyes Sprinter 2300-SBU Kit
              +e('li').item Софтбокс Falcon Eyes SBQ-40180 BW жаропрочный с сотовой насадкой
              +e('li').item Стойка-тренога Falcon Eyes FEL-3050A/B.0 - 2шт.
              +e('li').item Стойка Falcon Eyes L-150 /B напольная
              +e('li').item Falcon Eyes F-1200R генератор тумана
              +e('li').item Falcon Eyes SF-05 вентилятор студийный

      +e('div').box.box_reverse
        +col(5)
          +e.title
            +square('PROFOTO')
            +e('ul').list
              +e('li').item Profoto D1 Air 500 Моноблок импульсный
              +e('li').item Profoto D1 Studio Kit 500/500/1000 Air
              +e('li').item (including Air Remote) / Комплект студийного света
              +e('li').item Profoto Softlight Reflector White 65°
              +e('li').item Портретная тарелка белая
              +e('li').item Profoto Softbox RFi 30x180 cm / 1x6'. Софтбокс 30х180

        +col(7)
          +e.img
            +image-bg()(src="assets/images/oborudovanie/photo2.jpg" alt='')

      +e('div').box
        +col(7)
          +e.img
            +image-bg()(src="assets/images/oborudovanie/photo3.jpg" alt='')
        +col(5)
          +e.title
            +square('KUPO')
            +e('ul').list
              +e('li').item KUPO K stand-Junior boom stand, Стойка-журравль
              +e('li').item KUPO High roller stand, Стойка на колесах

      +e('div').box.box_reverse
        +col(7)
          +e.title
            +square('СИСТЕМЫ УСТАНОВКИ ФОНА')
            +e('ul').list
              +e('li').item Fotokvant V-2830 ворота для фотофона
